{
  "name": "project-q",
  "displayName": "projectQ",
  "description": "Quincy's project manager toolkit",
  "version": "0.1.0",
  "publisher": "quincyx",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuincyX/vscode-extension-projectQ.git"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:projectQList",
    "onCommand:projectQ.addProject"
  ],
  "contributes": {
    "commands": [
      {
        "command": "projectQ.addProject",
        "title": "projectQ: add current project"
      },
      {
        "command": "projectQ.openProject",
        "title": "projectQ: open project"
      },
      {
        "command": "projectQ.deleteProject",
        "title": "projectQ: delete project"
      },
      {
        "command": "projectQ.renameProject",
        "title": "projectQ: rename project"
      },
      {
        "command": "projectQ.changeCategory",
        "title": "projectQ: change project's category"
      },
      {
        "command": "projectQ.addCategory",
        "title": "projectQ: add category"
      },
      {
        "command": "projectQ.deleteCategory",
        "title": "projectQ: delete category"
      },
      {
        "command": "projectQ.refresh",
        "title": "projectQ: refresh project list",
        "icon": "image/refresh.svg"
      },
      {
        "command": "projectQ.list",
        "title": "projectQ: list projects"
      },
      {
        "command": "projectQ.active",
        "title": "projectQ: active"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectQ",
          "title": "ProjectQ",
          "icon": "image/icon.svg"
        }
      ]
    },
    "views": {
      "projectQ": [
        {
          "id": "projectQList",
          "name": "project list"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "projectQ.openProject",
          "when": "viewItem == project"
        },
        {
          "command": "projectQ.renameProject",
          "when": "viewItem == project"
        },
        {
          "command": "projectQ.changeCategory",
          "when": "viewItem == project"
        },
        {
          "command": "projectQ.deleteProject",
          "when": "viewItem == project"
        },
        {
          "command": "projectQ.deleteCategory",
          "when": "viewItem == category"
        }
      ],
      "view/title": [
        {
          "command": "projectQ.refresh",
          "title": "refresh project list",
          "group": "navigation"
        },
        {
          "command": "projectQ.addProject",
          "title": "add current folder as a project"
        },
        {
          "command": "projectQ.addCategory",
          "title": "add a new project category"
        }
      ]
    },
    "configuration": {
      "projectQ.configLocation": {
        "type": "string",
        "default": "",
        "description": "projectQ.json store place"
      }
    },
    "keybindings": [
      {
        "command": "projectQ.listProjects",
        "key": "shift+alt+p",
        "mac": "cmd+alt+p"
      }
    ]
  },
  "scripts": {
    "dev": "webpack --watch --mode development --info-verbosity verbose",
    "build": "webpack --mode development",
    "vscode:prepublish": "webpack --mode production",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "eslint": "^5.13.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "vscode": "^1.1.36",
    "vscode-test": "^1.0.2",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "shortid": "^2.2.15"
  }
}
